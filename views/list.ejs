<%- include("header"); -%>

<body>
  <div class="box" id="heading">
    <h1> <%= title %></h1>
  </div>

  <div class="box">

    <% tasks.forEach(function(element) { %>

    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= element._id%>" onChange="this.form.submit()">
        <p> <%= element.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= title %>"></input>
    </form>

    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="task" placeholder="New Task" autocomplete="off" required>
      <button class="plus" type="submit" name="list" value="<%= title %>">+</button>
    </form>

  </div>

</body>

<%- include("footer"); -%>
